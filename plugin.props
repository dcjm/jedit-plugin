### Plugin properties
# For jEdit 4.2; defer = plugin only needs to be loaded when it is first invoked
plugin.polyml.PolyMLPlugin.activate = defer

# This name is used for the menu associated with this plugin, also used by 
# jEdit to work out the main class associated with this plugin 
# (jedit appends "Plugin" to this to get the main class)
plugin.polyml.PolyMLPlugin.name = PolyML Plugin

# Other stuff for jEdit
plugin.polyml.PolyMLPlugin.author = Lucas Dixon
plugin.polyml.PolyMLPlugin.version = 0.1.0
plugin.polyml.PolyMLPlugin.description = A Plugin for PolyML
plugin.polyml.PolyMLPlugin.depend.0 = jedit 04.03.00.00
plugin.polyml.PolyMLPlugin.depend.1 = plugin console.ConsolePlugin 4.3.4
plugin.polyml.PolyMLPlugin.depend.2 = jdk 1.5
plugin.polyml.PolyMLPlugin.depend.3 = plugin errorlist.ErrorListPlugin 1.7

plugin.polyml.PolyMLPlugin.docs = index.html


### plugin setting for menu item.
plugin.polyml.PolyMLPlugin.menu=\
  polyml-menu.mitem-process-buffer \
  - \
  polyml-menu.mitem-new \
  - \
  polyml-menu.mitem-start \
  polyml-menu.mitem-stop \
  polyml-menu.mitem-restart \
  - \
  polyml-menu.mitem-stop-all \
  - \
  polyml-menu.mitem-process-shellbuf-to-eof \
  - \
  polyml-menu.mitem-prev-command \
  polyml-menu.mitem-next-command

#  - \
#  polyml-menu.mitem-send-cur-buffer \
#  polyml-menu.mitem-send-cur-command \

# labels for the menu items
polyml-menu.mitem-process-buffer.label=Process Buffer
polyml-menu.mitem-new.label=New ShellBuffer
polyml-menu.mitem-stop-all.label=Stop All ShellBuffer Processes
polyml-menu.mitem-start.label=Start ShellBuffer
polyml-menu.mitem-stop.label=Stop ShellBuffer
polyml-menu.mitem-restart.label=Restart ShellBuffer
polyml-menu.mitem-process-shellbuf-to-eof.label=Process ShellBuffer Input
polyml-menu.mitem-prev-command.label=Previous Command
polyml-menu.mitem-next-command.label=Next Command


#polyml-menu.mitem-send-cur-buffer.label=Send Buffer to ShellBuffer
#polyml-menu.mitem-send-cur-command.label=Send Line/Command to ShellBuffer


### plugin options pane
plugin.polyml.PolyMLPlugin.option-pane=polyml-options
options.polyml-options.code=new polyml.ShellBufferOptionPane();
options.polyml-options.label=ShellBuffer Plugin Options
# Setting not defined but supplied for completeness
options.polyml-options.filepath=

### default jedit property for preferences, saved and edit by ShellBufferOptionPane
# must be same as: ShellBufferOptionPane.PROPS_SHELL_COMMAND
options.polyml.shell-command=/bin/bash
# must be same as: ShellBufferOptionPane.PROPS_SHELL_PROMPT
options.polyml.shell-prompt=# 
# must be same as: ShellBufferOptionPane.PROPS_MAX_HISTORY
options.polyml.max-history=50